tr id="#{dom_id order}"
  td 
    span title = Order.human_attribute_name("status.#{order.status}")
      - case order.status.to_sym
      - when :newborn
        i.bi.bi-circle
      - when :in_progress
        i.bi.bi-person-circle 
      - when :completed
        i.bi.bi-check-circle
      - else
        i.bi.bi-x-circle
